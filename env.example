# Server Configuration
PORT=3000
NODE_ENV=development

# External NID Service Configuration
NID_SERVICE_BASE_URL=https://prportal.nidw.gov.bd/partner-service/rest
NID_SERVICE_USERNAME=your_nid_service_username
# IMPORTANT: If password contains special characters, wrap in quotes
NID_SERVICE_PASSWORD="your_nid_service_password"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_mysql_username
DB_PASSWORD=your_mysql_password
DB_NAME=nid_service

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log 